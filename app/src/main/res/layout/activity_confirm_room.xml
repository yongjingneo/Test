<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <TextView
        android:id="@+id/textView181"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Room Reservation"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView211"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Email"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtRmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView101"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Date"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtRdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView121"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Time"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtRtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Name"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextRName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Phone Number"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextRPN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone" />

    <Button
        android:id="@+id/btnConfirmRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_on_secondary"
        android:text="Confirm"
        android:textColor="@color/design_default_color_background" />

</LinearLayout>